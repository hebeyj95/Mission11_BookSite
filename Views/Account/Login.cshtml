@{
    Layout = null;
}
@model LoginModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> BookSite Login </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
 </head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-l-2">BookSite 2.0</span>
    </div>
    <h3 class="text-center">Login!</h3>
    <div class="m-1 p-1 d-flex justify-content-center">
        <div class="text-danger mx-auto" asp-validation-summary="All"></div>
    </div>
    <form method="post" asp-controller="Account" asp-action="Login" class="d-flex flex-column align-items-center">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Log In</button>
        <input type="hidden" asp-for="ReturnUrl" />
    </form>
</body>
</html>
